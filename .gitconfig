[user]
  name = Takashi Kokubun
  email = takashikkbn@gmail.com
[include]
  path = .gitconfig.local
[color]
  ui = true
[core]
  excludesfile = ~/.gitignore
	editor = /usr/bin/vim
[alias]
  co = checkout
  st = status -sb
  pr = pull --rebase
  fo = fetch origin
  ro = rebase origin
  rc = rebase --continue
  wd = diff --word-diff
  gp = grep -n
  lg = log --graph --pretty=oneline --decorate --date=short --abbrev-commit --branches
[push]
	default = simple
[branch]
	autosetuprebase = always
[ghq]
  root = ~/src
