resources:
  <%- homebrew_packages.each do |pkg| -%>
  <%- name, *options = pkg.split(' ') %>
  - type: homebrew_package
    name: <%= name %>
    options: <%= options.join(' ') %>
  <%- end -%>

  <%- homebrew_cask_packages.each do |name| -%>
  - type: homebrew_cask_package
    name: <%= name %>
    options: --appdir=/Applications
  <%- end -%>

  <%- atom_packages.each do |name| -%>
  - type: atom_package
    name: <%= name %>
  <%- end -%>

  - type: rbenv_ruby
    version: 2.2.2
    global: true

  - type: defaults
    domain: com.apple.dock
    key: orientation
    value: left
    notify:
      - restart_dock

  - type: dotfiles
    directory: ~/src/github.com/k0kubun/dotfiles/linked

  - type: script
    path: scripts/karabiner.sh
  - type: script
    path: scripts/karabiner_export.sh
  - type: script
    path: scripts/font.sh

handlers:
  - id: restart_dock
    type: command
    script: killall Dock
